# MotherDuck Sync Environment Variables
# Copy this to .env and fill in your values

# Supabase PostgreSQL connection (use pooler for external connections)
# Format: postgres://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=postgres://postgres.your-project-ref:YOUR_DB_PASSWORD@aws-0-your-region.pooler.supabase.com:6543/postgres?sslmode=require

# MotherDuck token (get from https://app.motherduck.com)
MOTHERDUCK_TOKEN=your_motherduck_token_here

# Optional: MotherDuck database name (default: analytics)
MOTHERDUCK_DATABASE=analytics

# Table configuration - keeps table/column names out of public repo
# For GitHub Actions: Set SYNC_TABLES_CONFIG secret (base64-encoded JSON)
# For local dev: Use SYNC_TABLES_JSON with plain JSON
#
# Example JSON format:
# [
#   {"source": "staging_users", "target": "users", "pk": ["id"], "order_by": "created_at"},
#   {"source": "staging_posts", "target": "posts", "pk": ["id"], "columns": ["id", "title", "created_at"]}
# ]
#
# SYNC_TABLES_CONFIG=<base64-encoded-json>
# SYNC_TABLES_JSON=[{"source":"table","target":"target","pk":["id"]}]
